<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="E:\PythonAI\Modular-AI-Chatbot\.venv\Scripts\python.exe"
                  arguments="-m Web.app"
                  startupTimeLimit="120"
                  requestTimeout="00:04:00"
                  stdoutLogEnabled="true"
                  stdoutLogFile="logs\stdout"
                  hostingModel="OutOfProcess">
        <environmentVariables>
          <environmentVariable name="PYTHONPATH" value="E:\PythonAI\Modular-AI-Chatbot\Source" />
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="FLASK_ENV" value="production" />
          <environmentVariable name="PYTHONUNBUFFERED" value="1" />
          
          <!-- HuggingFace Cache Settings -->
          <environmentVariable name="HF_HOME" value="E:\PythonAI\huggingface_cache" />
          <environmentVariable name="HF_HUB_CACHE" value="E:\PythonAI\huggingface_cache" />
          <environmentVariable name="HF_DATASETS_CACHE" value="E:\PythonAI\huggingface_cache" />
          <environmentVariable name="SENTENCE_TRANSFORMERS_HOME" value="E:\PythonAI\huggingface_cache" />
          <environmentVariable name="HF_HUB_DISABLE_SYMLINKS_WARNING" value="1" />
          <environmentVariable name="PYTHONWARNINGS" value="ignore::FutureWarning" />
        </environmentVariables>
      </aspNetCore>
      
      <!-- Allow longer query strings for OAuth callback -->
      <security>
        <requestFiltering>
          <requestLimits maxQueryString="8192" maxUrl="4096" />
        </requestFiltering>
      </security>
      
      <!-- Add HTTPS headers for Flask -->
      <httpProtocol>
        <customHeaders>
          <add name="X-Forwarded-Proto" value="https" />
        </customHeaders>
      </httpProtocol>
      
      <!-- Allow static files -->
      <staticContent>
        <mimeMap fileExtension=".json" mimeType="application/json" />
        <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
        <mimeMap fileExtension=".woff" mimeType="font/woff" />
      </staticContent>
    </system.webServer>
  </location>
  
  <!-- Configure Static folder handling -->
  <location path="Static">
    <system.webServer>
      <handlers>
        <clear />
        <add name="StaticFile" path="*" verb="GET,HEAD" modules="StaticFileModule" resourceType="File" requireAccess="Read" />
      </handlers>
    </system.webServer>
  </location>
</configuration>
